<div class="main-content">
    <main>
        <div class="recent-flex">
            <div class="project">
                <div class="card">
                    <div class="card-header">
                        <h3>All Products</h3>
                        <div>
                          <button onclick="window.location.href='/product/upload-page'" type="button"> Add Product </button>
                          <button> See All <span class="las la-arrow-right"></span></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table width="100%"> 
                                <thead> 
                                    <tr>    
                                        <td>Name </td>
                                        <td>Description  </td>
                                        <td>Price </td>
                                        <td>Options </td>
                                    </tr>
                                </thead>
                                <tbody>
                                  {{#each products}}
                                    <tr>
                                      <td>
                                        <a href="/product/{{this.slug}}">{{this.name}}</a>
                                      </td>
                                      <td>{{this.description}}</td>
                                      <td>{{this.price}}$</td>
                                      <td>
                                        <a href="/product/{{this.slug}}" class="product-opt">edit</a>

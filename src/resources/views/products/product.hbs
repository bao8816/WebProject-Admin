
<div class="main-content">
    <main>
        <div class="recent-flex">
            <div class="project">
                <div class="card">
                    <div class="card-header">
                        <h3>All Products</h3>
                        <div>
                          <button onclick="window.location.href='/product/upload-page'" type="button"> Add Product <span class="las la-plus"></span> 
                          </button>
                          <button> Filter <span class="las la-arrow-down"></span></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table width="100%"> 
                                <thead> 
                                    <tr>    
                                        <td>Name </td>
                                        <td>Description  </td>
                                        <td>Price </td>
                                        <td>Options </td>
                                    </tr>
                                </thead>
                                <tbody>
                                  {{#each products}}
                                    <tr>
                                      <td>
                                        <a href="/product/{{this.slug}}" style="font-weight: bold;">{{this.name}}</a>
                                      </td>
                                      <td>{{this.description}}</td>
                                      <td>{{this.price}}$</td>
                                      <td>
                                        <a href="/product/{{this.slug}}" class="product-opt">edit</a>
                                        <buttons 
                                          type="submit" 
                                          class="product-opt" 
                                          data-id="{{this._id}}" 
                                          data-bs-toggle="modal" 
                                          data-bs-target="#deleteProductModal"
                                          style="color: red;">
                                          delete
                                        </buttons>
                                      </td>
                                    </tr>
                                  {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </main>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteProductModal" tabindex="-1" aria-labelledby="deleteProductModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteProductModalLabel" style="font-size: larger; color: red;">Warning!!!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="font-size: large;">
        Do you want to delete this product?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="btn-delete-product" style="color: red;">Delete</button>
      </div>
    </div>
  </div>
</div>

{{!-- Delete Product hidden form --}}

<form name="delete-product-hidden-form" method="POST"></form>
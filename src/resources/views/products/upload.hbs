            <input data-aos="fade-up" data-aos-delay="300" id="description" name="description" type="text" class="box" placeholder="product's description">
            <input data-aos="fade-up" data-aos-delay="450" id="image" name="image" type="text" placeholder="product's image" class="box">
            <input data-aos="fade-up" data-aos-delay="600" id="price" name="price" type="text" placeholder="price" class="box">
            <button data-aos="fade-up" data-aos-delay="300" type="submit" class="btn">upload</button>
         </form>
    </div>
</section>


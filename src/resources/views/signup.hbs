<section class="heads">
    
    <div class="container">
        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
        <hr></hr>
        <form method="POST" action="/signup">
            <label for="email"><b>Email</b></label>
            <input type="email" placeholder="Enter Email" id="username" name="username" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" id ="new-password"  name="password" required>

            <p class="error">{{error}}</p>
            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>
            <button type="submit" class="signup-btn" id="signup">Sign Up</button>  
        </form>

        <div class="container">
            
            <button type="button" class="cancel-btn container-btn" onclick="location.href='/'">Cancel</button>
            <button type="button" class="to-login-btn container-btn" onclick="location.href='/login'">Login?</button>
        </div>
        
    </div>
    
</section>
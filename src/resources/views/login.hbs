<section class="heads">
    <div class="container">
        <h1>Login</h1>
        <hr></hr>
        <form method="post" action="/login/password">
            <label for="username"><b>Email</b></label>
            <input id="username" type="text" placeholder="Enter Email" name="username" required>
        
            <label for="psw"><b>Password</b></label>
            <input id="current-password" type="password" placeholder="Enter Password" name="password" required>
        
            
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
            <p></p>
            <p>{{errors}}</p>
            <button type="submit"class="login9">Login</button>
        </form>
    </div>
    
    <div class="container">
        <button type="button" class="cancelbtn" onclick="location.href='/'">Cancel</button>
        <span class="psw"> <a href="#">Forgot password?</a></span>
    </div>
</section>
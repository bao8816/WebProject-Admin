<section class="heads">
    <div class="container">
        <h1>Log In</h1>
        <hr></hr>
        <form method="POST" action="/login/password">
            <label for="email"><b>Email</b></label>
            <input id="username" type="email" placeholder="Enter Email" name="username" required>
        
            <label for="psw"><b>Password</b></label>
            <input id="current-password" type="password" placeholder="Enter Password" name="password" required>
        
            
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
            <p></p>
            <p class="error">{{error}}</p>
            <button type="submit" class="login-btn">Log In</button>
        </form>
    </div>
    
    <div class="container">
        <button type="button" class="cancel-btn container-btn" onclick="location.href='/'">Cancel</button>
        <button type="button" class="to-signup-btn container-btn" onclick="location.href='/signup'">Sign Up?</button>  
        <span class="forgot-pass"> <a href="#">Forgot password?</a> </span>     
    </div>

</section>
